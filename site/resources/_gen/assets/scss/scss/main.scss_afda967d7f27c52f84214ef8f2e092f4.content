html,body{height:100%;width:100%;margin:0}.main{background-image:url("../img/background-sm.webp");background-attachment:fixed;background-size:cover;background-repeat:no-repeat;height:100%}@media (min-width: 768px){.main{background-image:url("../img/background-md.webp")}}@media (min-width: 992px){.main{background-image:url("../img/background-lg.webp")}}@media (min-width: 1200px){.main{background-image:url("../img/background-xl.webp")}}.sidebar{position:absolute;left:0;z-index:1;width:100%;max-width:100%;height:100%;background:inherit;overflow:hidden}@media (min-width: 1200px){.sidebar{width:33%}}.sidebar::before{content:'';position:absolute;background:inherit;z-index:-1;top:0;left:0;right:0;bottom:0;filter:blur(5px);box-shadow:inset 0 0 200px rgba(0,0,0,0.2)}.sidebar .content{position:absolute;top:50%;left:50%;transform:translate(-50%, -50%);width:100%}.sidebar .content hr{margin-top:30px;border-width:0;border-top-width:0px;border-top:2px solid #FFF;width:20%}.title{margin:0;font-family:'Roboto Slab', serif;font-style:normal;font-weight:normal;font-size:48px;line-height:63px;color:#FFFFFF;text-align:center}.subtitle{margin:0;font-family:'Roboto Slab', serif;font-style:normal;font-weight:normal;font-size:20px;line-height:47px;color:#FFFFFF;text-align:center}.links{font-family:'Roboto Slab', serif;font-size:20px;margin-top:10px;text-align:center}.links a{text-decoration:none;color:#FFFFFF;line-height:35px;padding:0 8px}.links a:hover{color:#a5d6a7}
